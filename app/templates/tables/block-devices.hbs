<div class="widget list-table">
  <div class="table-head-ribbon">
		<div class="table-title">Block Devices</div>
    <div>
      Total: {{total}} devices
    </div>
    <div class="ui mini icon input">
      {{input type='text' value=esFilter placeholder='Search...'}}
      <i class="search icon"></i>
    </div>
  </div>

  <div class="table-box">
  <table>
    <thead>
      <tr>
        <th {{action 'sortBy' 'id'}}>ID</th>
        <th {{action 'sortBy' 'device'}}>Device</th>
        <th {{action 'sortBy' 'statusId'}}>Status</th>
        <th {{action 'sortBy' 'mountType'}}>Type</th>
        <th {{action 'sortBy' 'mountMode'}}>Mode</th>
        <th {{action 'sortBy' 'bootableFlag'}}>Bootable</th>
        <th {{action 'sortBy' 'hotPlugFlag'}}>HotPlug</th>
        <th {{action 'sortBy' 'virtualDiskImage.name'}}>Image Name</th>
        <th {{action 'sortBy' 'virtualDiskImage.capacity'}}>Capacity</th>
        <th {{action 'sortBy' 'virtualDiskImage.units'}}>Units</th>
      </tr>
    </thead>
    <tbody>
      {{#each filteredContent as |item|}}
      <tr {{action "select" item}} class="clickable {{item.mark}}">
        <td class="tac">{{item.id}}</td>
        <td class="tac">{{item.device}}</td>
        <td class="tac">{{item.statusId}}</td>
        <td class="tac">{{item.mountType}}</td>
        <td class="tac">{{item.mountMode}}</td>
        <td class="tac">{{item.bootableFlag}}</td>
        <td class="tac">{{item.hotPlugFlag}}</td>
        <td class="tac">{{item.virtualDiskImage.name}}</td>
        <td class="tac">{{item.virtualDiskImage.capacity}}</td>
        <td class="tac">{{item.virtualDiskImage.units}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>
