<div class="widget list-table">
  <div class="table-head-ribbon">
    <div>
      Total: {{total}} users
    </div>
    <div class="ui mini icon input">
      {{input type='text' value=esFilter placeholder='Search...'}}
      <i class="search icon"></i>
    </div>
  </div>

  <div class="table-box">
  <table>
    <thead>
      <tr>
        <th {{action 'sortBy' 'id'}}>ID</th>
        <th {{action 'sortBy' 'username'}}>Username</th>
        <th {{action 'sortBy' 'firstName'}}>First Name</th>
        <th {{action 'sortBy' 'lastName'}}>Last Name</th>
        <th {{action 'sortBy' 'email'}}>Email</th>
      </tr>
    </thead>
    <tbody>
      {{#each item in filteredContent}}
      <tr {{action "select" item}} class="clickable {{item.mark}}">
        <td class="tac">{{item.id}}</td>
        <td class="tac">{{item.username}}</td>
        <td class="tac">{{item.firstName}}</td>
        <td class="tac">{{item.lastName}}</td>
        <td class="tac">{{item.email}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>
